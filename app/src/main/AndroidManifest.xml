<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.slipwindow"
    android:sharedUserId="android.uid.system">

    <!-- android:sharedUserId="android.uid.system" -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_PACKAGE_SIZE" />
    <uses-permission android:name="android.permission.CLEAR_APP_CACHE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.android.permission.FORCE_STOP_PACKAGES" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SENDTO" />

                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingActivity" />
        <activity android:name=".SoftManageActivity" />
        <activity android:name=".ShowAppDetailInfoActivity" />
        <activity android:name=".AboutAppActivity" />

        <service
            android:name=".service.IncomingCallAndMessageService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".ListManageActivity" />

        <!--
        <receiver
            android:name=".broadcast.MessageReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="100">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        -->
        <!-- 监听收到的SMS信息广播 -->
        <receiver
            android:name=".broadcast.SmsReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_DELIVER" />
            </intent-filter>
        </receiver>
        <!-- 监听收到的MMS信息广播 -->
        <receiver
            android:name=".broadcast.MmsReceiver"
            android:permission="android.permission.BROADCAST_WAP_PUSH">
            <intent-filter>
                <action android:name="android.provider.Telephony.WAP_PUSH_DELIVER" />

                <data android:mimeType="application/vnd.wap.mms-message" />
            </intent-filter>
        </receiver>

        <!-- 快速响应服务 -->
        <service
            android:name=".service.HeadleeSmsSendService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.SEND_RESPOND_VIA_MESSAGE">
            <intent-filter>
                <action android:name="android.intent.action.RESPOND_VIA_MESSAGE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
            </intent-filter>
        </service>

        <receiver
            android:name=".broadcast.PhoneStateReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <activity android:name=".PhoneWhiteListActivity" />
        <activity android:name=".PhoneDarkListActivity" />
        <activity android:name=".MessageDarkListActivity" />
        <activity android:name=".MessageWhiteListActivity" />
        <activity android:name=".PhoneDarkContactActivity" />
        <activity android:name=".PhoneWhiteContactActivity" />
        <activity android:name=".MessageDarkContactActivity" />
        <activity android:name=".MessageWhiteContactActivity" />
        <activity android:name=".ModleSelectActivity" />
        <activity android:name=".SelectedTimeInfoActivity" />
        <activity android:name=".SelectedTimeContactActivity" />
        <activity android:name=".ModleMessageActivity" />
        <activity android:name=".HarrassMessageManageActivity" />
        <activity android:name=".HarrassManageActivity" />
        <activity android:name=".HarrassPhoneManageActivity" />
        <activity android:name=".SelectedHarrassAddressInfoActivity" />
        <activity android:name=".SensitiveWordActivity" />
        <activity android:name=".TasksManageActivity" />
        <activity android:name=".TasksSettingActivity" />

        <receiver
            android:name=".broadcast.ScreenBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_OFF" />
            </intent-filter>
        </receiver>

        <activity android:name=".NetControlActivity" />

        <service
            android:name=".service.FloatWindowService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".broadcast.AotuStartReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>


        </receiver>
    </application>

</manifest>
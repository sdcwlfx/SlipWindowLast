<?xml version="1.0" encoding="utf-8"?><!--限额提醒子项-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/flow_warning_list2_item_text1"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:textColor="#222"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/flow_warning_list2_item_text2"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:textColor="#222"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/flow_warning_list2_item_seek_bar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/flow_warning_list2_item_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
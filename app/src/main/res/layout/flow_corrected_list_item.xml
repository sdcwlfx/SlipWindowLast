<?xml version="1.0" encoding="utf-8"?><!--流量校正子项-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/flow_corrected_list_item_text1"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#222"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/flow_corrected_list_item_text2"
            android:layout_width="wrap_content"
            android:layout_below="@id/flow_corrected_list_item_text1"
            android:textSize="10sp"
            android:textColor="#777"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/flow_corrected_list_item_text3"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#222"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>